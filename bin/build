#!/bin/bash
# -*- mode: bash; tab-width: 2; -*-
# vim: ts=2 sw=2 ft=bash noet

# source the Nos framework
. /opt/nos/common.sh

# initialize Nos with the original arguments
nos_init "$@"

# source common lib
. ${engine_lib_dir}/nodejs.sh

# nodejs doesn't have a build/compile process, other than javascript asset
# frameworks if they exist and are configured
nodejs_compile_assets

# copy the release into the live code directory
nodejs_publish_release
